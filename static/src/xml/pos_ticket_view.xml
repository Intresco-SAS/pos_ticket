<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-extend="Chrome">
        <t t-jquery='.pos-branding' t-operation='replace'>
             <img src='/web/binary/company_logo' style="width: 2%;padding: 2px 8px 0px 13px;float: left;"/>
             <span class="placeholder-UsernameWidget" style="float: left;padding-top: 19px;color: #fff;"></span>
        </t>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery='.pos-sale-ticket' t-operation='replace'>
            <div class="pos-sale-ticket">
                
                    <div class="row">

                    	<div class="col-12" style="width: 100%;" align="center">
                        <img src='/web/binary/company_logo' />
                    </div>

                    <div align="center" style="border-bottom: 1px solid black;margin-bottom: 5px; margin-top: 5px">
                        <b><span style="font-size:17px"><t t-if="widget.pos.company.name"><span t-esc="widget.pos.company.name"/>
                </t></span></b><br />
                        RÉGIMEN COMÚN <br/>
                        NIT <t t-if="widget.pos.company.vat"><span t-esc="widget.pos.company.vat"/> <br/>
                        <t t-if="widget.pos.company.street"><span t-esc="widget.pos.company.street"/><br/>
                        TEL <t t-if="widget.pos.company.phone"><span t-esc="widget.pos.company.phone"/><br/><br/>
                        RESOLUCIÓN DIAN 99999999999999 <br/>
                        DEL 2020-01-24 DEL 8001 AL 9000
                                             
                    </div>
                    <div align="center">

 						<t t-if="order.get_client()">
                        CLIENTE: <t t-esc="order.get_client().name"/><br />
                    	</t>
                    	<t t-if="order.get_client()">
                        CC/NIT: <t t-esc="order.get_client().xidentification"/><br />
                    	</t>
                        <t t-if="order.get_client()">
                        DIRECCIÓN: <t t-esc="order.get_client().street"/><br />
                    	</t>

                    </div>
                    

                    
                </div>

                <div align="center">
               
                  
                        ATENDIÓ: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br/><br/>
                        <b>FACTURA DE VENTA: <t t-esc="order.name"/></b><br/>
                        FECHA: <t t-esc="moment().format('L LT')"/><br/>
                 </div>
                <!--t t-if="widget.pos.company.name">
                    <div style="width:100%;text-align:right;"><t t-esc="widget.pos.company.name"/></div>
                </t-->
                <!--t t-if="widget.pos.company.email">
                    <div style="width:100%;text-align:right;"><t t-esc="widget.pos.company.email"/></div>
                </t-->
                <br />
                <t t-if="receipt.header">
                    <div style='text-align:center'>
                        <t t-esc="receipt.header" />
                    </div>
                    <br/>
                </t>
                 <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='33%' />
                        <col width='15%' />
                        <col width='23%' />
                        <col width='35%' />
                    </colgroup>
                    <tr style="border: 1px solid rgb(0, 0, 0);">
                        <th>PRODUCTO</th>
                        <th>CTA.</th>
                        <th>VL.UNIT</th>
                        <th style='text-align:right'>SUBTOTAL</th>
                    </tr>
                </table>
                <!--Contador d Productos-->
                <t t-set="counter" t-value="0"/>
                        
                    <table style="font-size:14px">
                    <tr t-foreach="orderlines" t-as="orderline">
                         <t  t-set="counter" t-value="counter + 1"/>
                        <td>                          
                            <div class="row" style="margin-bottom:5px">

                            <t t-if="orderline.get_product().default_code">
                            [<t t-esc="orderline.get_product().default_code"/>]
                            </t>
                            <t t-esc="orderline.get_product().display_name"/><br/>

                             <!--t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    <t t-esc="orderline.get_discount()"/>% Dto.
                                </div>
                            </t-->
                        
                        <div class="col-12">
                            <span style="margin-left:100px">
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </span>
                        
                        <span style="margin-left:20px">
                            <t t-set="a" t-value="orderline.get_unit_display_price()"></t>
                            <t t-set="b" t-value="1.19"></t>
                            <t t-set="c" t-value="a/b"></t>
                            <t t-esc="widget.format_currency(c,'Product Price')"/>
                        </span>
                        
                        <span style="margin-left:7px" class="pull-right">
                            <t t-esc="widget.format_currency(orderline.get_display_price()/1.19,'Product Price')"/>
                        </span>
                      </div> 
                      </div>
                </td>
                    </tr>
                </table>
                <br />
                 
                <div style="border-top: 1px solid black;" >
                    <span>TOTAL PRODUCTOS:</span> <span style="margin-left:20px" t-esc="counter"/> 
                </div>  <br/>     
                      
                        
<div style="border-top: 1px solid black;"></div>
                <table class='receipt-total'>
                    <colgroup>
                        <col width='25%' />
                        <col width='35%' />
                        <col width='40%' />
                    </colgroup>
                    <tr>
                        <td></td>
                        <td>Subt. sin Dto.:</td>
                        <td style='text-align:right'>
                            <t t-set="g" t-value="order.get_total_without_tax()"/>
                            <t t-set="h" t-value="order.get_total_discount()/1.19"></t>
                            <t t-set="i" t-value="g+h"></t>
                            <t t-esc="widget.format_currency(i,'Product Price')"/>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>Discount:</td>
                        <td style='text-align:right'>
                            <t t-set="j" t-value="order.get_total_discount()"/>
                            <!--El valor k es el Iva-->
                            <t t-set="k" t-value="1.19"></t>
                            <t t-set="l" t-value="j/k"></t>
                            <t t-esc="widget.format_currency(l,'Product Price')"/>

                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>Subtotal:</td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_without_tax(),'Product Price')"/>
                        </td>
                    </tr>

                    <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                        <tr>
                            <td></td>
                            <td><t t-esc="taxdetail.name" /></td>
                            <td style='text-align:right'>
                                <t t-esc="widget.format_currency(taxdetail.amount,'Product Price')"/>
                            </td>
                        </tr>
                    </t>
                    
                    <tr class="emph">
                        <td>Total:</td>
                        <td colspan="2" style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_with_tax(),'Product Price')"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <table class='receipt-paymentlines'>
                    <colgroup>
                        <col width='48%' />
                        
                        <col width='13%' />
                        <col width='39%' />
                    </colgroup>
                    <t t-foreach="paymentlines" t-as="line">
                      <tr>
                          <td>
                              <t t-esc="line.name"/>
                          </td>
                         
                          <td>
                          </td>
                          <td style='text-align:right'>
                              <t t-esc="widget.format_currency(line.get_amount(),'Product Price')"/>
                          </td>
                      </tr>
                    </t>
                </table>
                <br/>
                <table class='receipt-change'>
                    <colgroup>
                        <col width='40%' />
                       
                        <col width='15%' />
                        <col width='45%' />
                    </colgroup>
                    <tr><td>Change:</td>
                         <td>
                          
                          </td>
                        <td style='text-align:right'>
                        <t t-esc="widget.format_currency(order.get_change(),'Product Price')"/>
                        </td></tr>
                </table><br/>
                    <div align="center" style="font-size:14px; border-top: 1px solid black">
                    ¡GRACIAS POR SU COMPRA!<br />                      
                    </div>
                    <t t-if="widget.pos.company.email">
                    <div<t t-esc="widget.pos.company.email"/></div>
                    </t>
            </div>
        </t>
    </t>
</templates>
