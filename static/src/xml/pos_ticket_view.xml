<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-extend="Chrome">
        <t t-jquery='.pos-branding' t-operation='replace'>
             <img src='/web/binary/company_logo' style="width: 2%;padding: 2px 8px 0px 13px;float: left;"/>
             <span class="placeholder-UsernameWidget" style="float: left;padding-top: 19px;color: #fff;"></span>
        </t>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery='.pos-sale-ticket' t-operation='replace'>
            <div class="pos-sale-ticket">
                
                    <div class="row">
                   <div class="col-12" style="width: 100%;" align="center">
                        <img src='/web/binary/company_logo' />
                    </div><br/>

                   <div align="center" style="border-bottom: 1px solid black;margin-bottom: 5px">
                        <b><span style="font-size:17px">AMBAR BEAUTY MARKET</span></b><br />
                        IVA RÉGIMEN COMUN <br/>
                        NIT 901031982-9 <br/>
                        RESOLUCIÓN DIAN 18763001265775 <br/>
                        DEL 24/10/2019 DEL 10001 AL 20000<br/><br/>
                        Calle 69 Sur #46-111<br/>
                        TEL 4970016<br/>
                        CEL 301 4416138                       
                    </div>

<div align="center">
                        <t t-if="order.get_client()">
                        CLIENTE: <t t-esc="order.get_client().name"/><br />
                        </t>
                        <t t-if="order.get_client()">
                        CC/NIT: <t t-esc="order.get_client().vat"/><br />
                        </t>
                        <t t-if="order.get_client()">
                        DIRECCIÓN: <t t-esc="order.get_client().street"/><br />
                        </t>

  </div>                  
                    

                   
                </div>

                <div style="margin-top: 8px" align="center">
               
                  
                        <!--t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br/><br/-->
                        FACTURA DE VENTA: <t t-esc="order.name"/><br/>
                        FECHA: <t t-esc="moment().format('L LT')"/><br/>
                 </div>
                <!--t t-if="widget.pos.company.name">
                    <div style="width:100%;text-align:right;"><t t-esc="widget.pos.company.name"/></div>
                </t-->
                <!--t t-if="widget.pos.company.email">
                    <div style="width:100%;text-align:right;"><t t-esc="widget.pos.company.email"/></div>
                </t-->
                <br />
                <t t-if="receipt.header">
                    <div style='text-align:center'>
                        <t t-esc="receipt.header" />
                    </div>
                    <br/>
                </t>
                <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='37%' />
                        <col width='9%' />
                        <col width='27%' />
                        <col width='27%' />
                    </colgroup>
                    <tr style="border: 1px solid rgb(0, 0, 0);">
                        <th>PRODUCTO</th>
                        <th>CTA.</th>
                        <th style='text-align:right'>VL.UNIT</th>
                        <th style='text-align:right'>SUBT.</th>
                    </tr>
                    <tr t-foreach="orderlines" t-as="orderline" style="border-top: 1px solid grey;">
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
                             <!--t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    <t t-esc="orderline.get_discount()"/>% Dto.
                                </div>
                            </t-->
                        </td>
                        <td style='text-align:center'>
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </td>
                        <td style='text-align:right'>
                            <t t-set="a" t-value="orderline.get_unit_display_price()"></t>
                            <t t-set="b" t-value="1.19"></t>
                            <t t-set="c" t-value="a/b"></t>
                            <t t-esc="widget.format_currency(c,'Product Price')"/>
                        </td>
                        <td style='text-align:right'>
                            <t t-set="d" t-value="orderline.get_unit_display_price()"/>
                            <t t-set="e" t-value="orderline.quantityStr"></t>
                            <t t-set="f" t-value="d*e/1.19"></t>
                            <t t-esc="widget.format_currency(f,'Product Price')"/>
                        </td>

                    </tr>
                </table>
                <br />
<div style="border-top: 1px solid black;"></div>
                <table class='receipt-total'>
                    <colgroup>
                        <col width='30%' />
                        <col width='35%' />
                        <col width='35%' />
                    </colgroup>
                    <tr>
                        <td></td>
                        <td>Subt. sin Dto.:</td>
                        <td style='text-align:right'>
                            <t t-set="g" t-value="order.get_total_without_tax()"/>
                            <t t-set="h" t-value="order.get_total_discount()/1.19"></t>
                            <t t-set="i" t-value="g+h"></t>
                            <t t-esc="widget.format_currency(i)"/>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>Discount:</td>
                        <td style='text-align:right'>
                            <t t-set="j" t-value="order.get_total_discount()"/>
                            <!--El valor k es el Iva-->
                            <t t-set="k" t-value="1.19"></t>
                            <t t-set="l" t-value="j/k"></t>
                            <t t-esc="widget.format_currency(l)"/>

                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>Subtotal:</td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                        </td>
                    </tr>

                    <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                        <tr>
                            <td></td>
                            <td><t t-esc="taxdetail.name" /></td>
                            <td style='text-align:right'>
                                <t t-esc="widget.format_currency(taxdetail.amount)"/>
                            </td>
                        </tr>
                    </t>
                    
                    <tr class="emph">
                        <td>Total:</td>
                        <td colspan="2" style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <table class='receipt-paymentlines'>
                    <colgroup>
                        <col width='38%' />
                        <col width='20%' />
                        <col width='13%' />
                        <col width='29%' />
                    </colgroup>
                    <t t-foreach="paymentlines" t-as="line">
                      <tr>
                          <td>
                              <t t-esc="line.name"/>
                          </td>
                          <td>
                          </td>
                          <td>
                          </td>
                          <td style='text-align:right'>
                              <t t-esc="widget.format_currency(line.get_amount())"/>
                          </td>
                      </tr>
                    </t>
                </table>
                <br/>
                <table class='receipt-change'>
                    <colgroup>
                        <col width='40%' />
                        <col width='15%' />
                        <col width='15%' />
                        <col width='30%' />
                    </colgroup>
                    <tr><td>Change:</td>
                         <td>
                          </td>
                          <td>
                          </td>
                        <td style='text-align:right'>
                        <t t-esc="widget.format_currency(order.get_change())"/>
                        </td></tr>
                </table><br/>
                   
                    <div align="center" style="font-size:14px; border-top: 1px solid black;">
                      <span style="font-size:18px">¡GRACIAS POR SU COMPRA!</span>       
                    </div>

                    
                    
            </div>
        </t>
    </t>
</templates>
